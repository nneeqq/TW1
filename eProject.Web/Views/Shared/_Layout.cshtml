@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <title>Minton - @ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description"/>
        <meta content="Kroot" name="author"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>

        <!-- App favicon -->
        <link rel="shortcut icon" href="~/images/favicon.ico">

        <!-- App css -->
        @Styles.Render("~/bundles/bootstrap/css")
        @Styles.Render("~/bundles/app-min/css")
        @Styles.Render("~/bundles/icons-min/css")
    </head>

    <body>
        <!-- Navigation Bar-->
        <header id="topnav">
            @Html.Partial("_Header")
            @Html.Partial("_NavigationBar")
        </header>
        <!-- ============================================================== -->
        <!-- Start Page Content here -->

        <!-- ============================================================== -->
        <!-- Footer Start -->
        <section class="content">
            @Html.Partial("_Footer")
            @RenderBody()
        </section>

        <!-- Vendor js -->
        @Scripts.Render("~/bundles/vendor/js")

        <!-- App js -->
        @Scripts.Render("~/bundles/app-min/js")
    </body>
</html>